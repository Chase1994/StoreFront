@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <br />
    <p style="text-align:center;">Welcome @HttpContext.Current.User.Identity.Name</p>
    <div id="siteLogo" class="container-fluid">
        <img src="~/Images/Shred-logo.png" class="img-responsive"/>
    </div>
    
    <div class="container-fluid item peopleCarouselImg" id="carouselContainer">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Images/SkateboardPics/skateboard-img1.jpg">
                </div>

                <div class="item">
                    <img src="~/Images/SkateboardPics/skateboard-img2.jpg">
                </div>

                <div class="item">
                    <img src="~/Images/SkateboardPics/skateboard-img3.jpg">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
   
    <div class="container-fluid text-center">
        <h2>SERVICES</h2>
        <h4>What we offer</h4>
        <div class="container-fluid" style="margin-left:-160px">
            <div class="col-sm-4">
                <span class="glyphicon glyphicon-ok"></span>
                <h4>DECKS</h4>
                <p>Over 5 to choose from!</p>
            </div>
            <div class="col-sm-4">
                <span class="glyphicon glyphicon-wrench"></span>
                <h4>TRUCKS</h4>
                <p>We have some!</p>
            </div>
            <div class="col-sm-4">
                <span class="glyphicon glyphicon-road"></span>
                <h4>WHEELS</h4>
                <p>Necessary for movement!</p>
            </div>
        </div>
    </div>
    <div class="video-container">
        <iframe width="560" height="315" src="https://www.youtube.com/embed/RJrcEEaJNEc" frameborder="0" allowfullscreen></iframe>
    </div>
    <div class="container-fluid" id="googleMap" style="height:400px;width:100%;"></div>
    <script>
        function myMap() {
            var uluru = { lat: -37.857635, lng: 175.679869 };
            var map = new google.maps.Map(document.getElementById('googleMap'), {
                zoom: 4,
                center: uluru
            });
            var marker = new google.maps.Marker({
                position: uluru,
                map: map
            });
        }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA40R-nxotVqYBxtkmtBNS57BpI6TTaYlg&callback=myMap"></script>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/js")
}

